    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch Sender(console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_sender",
            "program": "${workspaceFolder}/Sender/bin/Debug/netcoreapp3.1/Sender.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Sender",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch Receiver(console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_receiver",
            "program": "${workspaceFolder}/Receiver/bin/Debug/netcoreapp3.1/Receiver.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Receiver",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}